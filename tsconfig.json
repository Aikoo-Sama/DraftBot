{
"compilerOptions": {
  "module": "commonjs",
  "noImplicitAny": true,
  "removeComments": true,
  "preserveConstEnums": true,
  "sourceMap": true,
	"allowJs": true,
	"outDir": "dist",
	"checkJs": false,
	"emitDeclarationOnly": true,
	"emitDecoratorMetadata": true,
	"experimentalDecorators": true,
	"incremental": true,
	"noResolve": false,
	"noEmitOnError": false,
	"declaration": true,
	"moduleResolution": "node",
	"skipLibCheck": true
},
"include": ["src/**/*"],
"exclude": ["node_modules", "**/*.spec.ts", "test/**/*"]
}